<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="post" type="com.example.sample.pojo.Post"/>
    </data>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardPost"
            app:contentPadding="@dimen/size_10dp"
            app:elevation="2dp"
            app:cardCornerRadius="@dimen/size_10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/iVProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:contentDescription="@{post.user.name}"
                        app:layout_constraintEnd_toStartOf="@+id/tVName"/>
                <TextView
                        android:id="@+id/tVName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{post.user.name}"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@android:color/holo_green_dark"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iVProfile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/tVLikes"/>
                <TextView
                        android:id="@+id/tVLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{post.likes}"
                        android:textColor="@android:color/holo_green_light"
                        android:drawablePadding="@dimen/size_10dp"
                        android:drawableStart="@drawable/ic_favorite"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintTop_toBottomOf="@+id/tVName"
                        app:layout_constraintStart_toEndOf="@+id/iVProfile"
                        app:layout_constraintEnd_toStartOf="@+id/btnWeb"
                        app:layout_constraintBottom_toBottomOf="@+id/btnWeb"/>
                <Button
                        android:id="@+id/btnWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/web"
                        android:background="@android:color/holo_blue_light"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textSize="@dimen/text_size_14"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toBottomOf="@+id/tVName"
                        app:layout_constraintStart_toEndOf="@+id/tVLikes"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>